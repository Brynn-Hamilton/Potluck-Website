@model DishInfo;
@{
    ViewData["Title"] = "RegisteredDish";
}

<div class="home">
    <h1>Dish Registration Confirmation</h1>
<hr />
Thank you @Model.Name for registering your dish: @Model.DishName for @Model.Category. 
<br />
@if(@Model.DishDescription != null && @Model.DishDescription.Length > 0){<span>@Model.DishDescription - sounds delicious!</span>}
<br />
We will contact you at @Model.PhoneNumber with any updates!
</div>

